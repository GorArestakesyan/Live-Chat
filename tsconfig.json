{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@screens/*": ["src/screens/*"],
      "@api/*": ["src/core/*"],
      "@utils/*": ["src/utils/*"],
      "@core/*": ["src/core/*"],
      "@assets/*": ["src/assets/*"],
      "@src/*": ["src/*"]
    }
  }
}
